<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>me.lished.Turbo</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/myapp</string>
        <string>~/Applications/Turbo.app/Contents/MacOS/Turbo</string>
        <!-- Add other arguments here if needed -->
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <!-- Optional: redirect stdout/stderr -->
    <key>StandardOutPath</key>
    <string>/tmp/Turbo.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/Turbo.err</string>
</dict>
</plist>
